<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="PokemonTeamBuilder.Themes.DarkTheme">

    <Color x:Key="PrimaryColor">#4CAF50</Color>
    <Color x:Key="SecondaryColor">#388E3C</Color>
    <Color x:Key="TertiaryColor">#1B5E20</Color>
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="FrameBackgroundColor">#1E1E1E</Color>
    <Color x:Key="TextColor">#E0E0E0</Color>
    <Color x:Key="SubTextColor">#B0B0B0</Color>
    <Color x:Key="ShellBackgroundColor">#2C2C2C</Color>
    <Color x:Key="ShellForegroundColor">#FFFFFF</Color>

    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource SubTextColor}" />
    </Style>

</ResourceDictionary>