<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonTeamBuilder.MainPage">

    <Grid Padding="15" RowSpacing="20" ColumnSpacing="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Spacing="10">

            <SearchBar x:Name="searchBar"
                        Placeholder="Search items..."
                        TextChanged="searchBar_TextChanged"
                        SearchButtonPressed="OnSearchBarPressed"
                        HorizontalOptions="Fill" />

            <ListView x:Name="suggestionListView"
                        ItemSelected="suggestionListView_ItemSelected"
                        HeightRequest="100"
                        IsVisible="False"
                        HorizontalOptions="Fill" />


            <CollectionView x:Name="allPokemonCollectionView"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            IsVisible="True"
                            SelectionMode="Single"
                            SelectionChanged="AllPokemonCollectionView_SelectionChanged"
                            RemainingItemsThreshold="16" 
                            RemainingItemsThresholdReached="AllPokemonCollectionView_RemainingItemsThresholdReached">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="4" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Change later-->
                        <Frame Padding="5" Margin="5" HasShadow="False" BorderColor="LightGray">
                            <StackLayout HorizontalOptions="Center">
                                <Image Source="{Binding SpriteUrl}"
                                        WidthRequest="60"
                                        HeightRequest="60" />
                                <Label Text="{Binding Name}"
                                        FontSize="12"
                                        HorizontalOptions="Center"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>


        </VerticalStackLayout>

        <Grid x:Name="pokemonDetailsGrid" Grid.Row="0" 
                Padding="10"
                Grid.ColumnSpan="2" 
                Grid.RowSpan="2"
                IsVisible="False"                  
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                ColumnSpacing="10">


            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />

                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" Spacing="25" Padding="10" 
                                    HorizontalOptions="Center" VerticalOptions="Center">

                <Button x:Name="backButton"
                        Text="Back"
                        FontSize="15"
                        Clicked="OnBackButtonClicked"
                        HorizontalOptions="Start" />

                <Image x:Name="pokemonSprite"
                        WidthRequest="200"
                        HeightRequest="200"
                        HorizontalOptions="Center" />

                <Label x:Name="pokemonNameLabel"
                        FontSize="20"
                        FontAttributes="Bold"
                        HorizontalOptions="Center" />

            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="15" Padding="10" 
                                    HorizontalOptions="Start" VerticalOptions="Center">

                <Label x:Name="pokemonHeightLabel" FontSize="15" />
                <Label x:Name="pokemonWeightLabel" FontSize="15" />
                <Label x:Name="pokemonTypeLabel" FontSize="15" />
                <Label x:Name="pokemonStatLabel" FontSize="15" />

                <BoxView HeightRequest="1" Color="LightGray" Margin="0, 10, 0, 10" />

                <Label x:Name="pokemonStrenghtLabel" FontSize="15" />
                <Label x:Name="pokemonWeaknessLabel" FontSize="15" />

                <HorizontalStackLayout Spacing="10" Margin="0, 10, 0, 0">
                    <Button x:Name="pokemonFavouriteButton"
                            IsVisible="False"
                            FontSize="15"
                            Text="Favourite"
                            Clicked="OnFavouriteClicked" />

                    <Button x:Name="pokemonAddToTeamButton"
                            IsVisible="False"
                            FontSize="15"
                            Text="Add to Team"
                            Clicked="OnAddTeamButtonClicked" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>
