<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonTeamBuilder.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30">

            <Label 
                Text="Application Settings"
                FontSize="Title"
                FontAttributes="Bold"
                HorizontalOptions="Start" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0, 5, 0, 15" />


            <Grid ColumnDefinitions="*, Auto" RowSpacing="10" ColumnSpacing="15">
                <Label Grid.Column="0" Text="Dark Mode" VerticalOptions="Center" FontSize="Medium" />
                <Switch x:Name="darkModeSwitch" 
                    Grid.Column="1" 
                    IsToggled="False" 
                    Toggled="OnDarkModeToggled"
                    HorizontalOptions="End" />
            </Grid>

            <BoxView HeightRequest="1" Color="LightGray" />

            <Label Text="Trainer Name" FontSize="Medium" Margin="0, 10, 0, 0" />
            <Entry x:Name="trainerNameEntry" Placeholder="Enter your name" Text="Ash Ketchum" />

            <BoxView HeightRequest="1" Color="LightGray" />

            <Button Text="Reload Pokemon"
                    Clicked="OnReloadPokemonClicked"
                    Margin="0, 30, 0, 0" />

            <Button Text="Save Settings" 
                    Clicked="OnSaveSettings" 
                    Margin="0, 30, 0, 0" />

            <Button x:Name="debugModeButton"
                    Text="Debug mode" 
                    Clicked="OnDebugModeClicked" 
                    Margin="0, 30, 0, 0"
                    BackgroundColor="LightGray" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>