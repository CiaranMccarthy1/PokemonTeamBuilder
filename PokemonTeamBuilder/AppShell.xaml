<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokemonTeamBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PokemonTeamBuilder"
    Title="Pokémon Team Builder"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{DynamicResource ShellBackgroundColor}"
    Shell.ForegroundColor="{DynamicResource ShellForegroundColor}"
    Shell.TitleColor="{DynamicResource ShellForegroundColor}"
    Shell.FlyoutBackgroundColor="{DynamicResource PageBackgroundColor}"
    FlyoutHeaderBehavior="Fixed">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="150" BackgroundColor="{DynamicResource PrimaryColor}" Padding="20">
            <VerticalStackLayout VerticalOptions="Center" Spacing="8">
                <Label Text="⚡ Pokémon" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="White" />
                <Label Text="Team Builder" 
                       FontSize="18" 
                       TextColor="White" 
                       Opacity="0.9" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="My Teams" 
                Icon="home"  
                Route="TeamsRoute">
        <ShellContent
            Title="My Teams"
            ContentTemplate="{DataTemplate local:TeamsPage}"
            Route="TeamsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Pokédex" 
                Icon="magnifyingglass"  
                Route="SearchRoute">
        <ShellContent
            Title="Pokédex"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Compare" 
            Icon="chart_bar"  
            Route="CompareRoute">
        <ShellContent
        Title="Compare"
        ContentTemplate="{DataTemplate local:PokemonCompare}"
        Route="PokemonCompare" />
    </FlyoutItem>

    <FlyoutItem Title="Settings"
                Icon="gear"
                Route="SettingsRoute">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>
</Shell>