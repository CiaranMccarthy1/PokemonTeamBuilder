<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokemonTeamBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PokemonTeamBuilder"
    Title="PokemonTeamBuilder"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Teams" 
                Icon="home"  
                Route="TeamsRoute">
        <ShellContent
            Title="My Teams"
            ContentTemplate="{DataTemplate local:TeamsPage}"
            Route="TeamsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Search" 
                Icon="magnifyingglass"  
                Route="SearchRoute">
        <ShellContent
            Title="Pokemon Search"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings"
                Icon="gear"
                Route="SettingsRoute">
        <ShellContent
            Title="App Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </FlyoutItem>
</Shell>